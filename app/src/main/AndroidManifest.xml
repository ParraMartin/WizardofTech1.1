<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WizardofTech"
        tools:targetApi="31">

        <!-- Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Otras actividades -->
        <activity android:name=".mapa" android:exported="false" />
        <activity android:name=".GabineteActivity" android:exported="false" />
        <activity android:name=".MonitorActivity" android:exported="false" />
        <activity android:name=".FuenteActivity" android:exported="false" />
        <activity android:name=".PlacaActivity" android:exported="false" />
        <activity android:name=".AlmacenamientoActivity" android:exported="false" />
        <activity android:name=".TarjetaActivity" android:exported="false" />
        <activity android:name=".MemoriaActivity" android:exported="false" />
        <activity android:name=".ProcesadorActivity" android:exported="false" />
        <activity android:name=".RefrigeracionActivity" android:exported="false" />
        <activity android:name=".registroActivity" android:exported="false" />
        <activity android:name=".loginActivity" android:exported="false" />
        <activity android:name=".splachActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".compativilidadActivity" android:exported="false" />
        <activity android:name=".ReciclajeActivity" android:exported="false" />
        <activity android:name=".guiasActivity" android:exported="false" />
        <activity android:name=".glosarioActivity" android:exported="false" />
        <activity android:name=".ArmadopcActivity" android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/my_map_api_key"/>
    </application>

</manifest>
